@model List<CommentViewModel>

<h2>Comments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Book</th>
            <th>Comment</th>
            <th>User</th>
            <th style="width: 100px;">Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>
                    <img src="/book/@comment.ImageUrl" alt="Book Image" style="width: 100px; height: auto;" />
                    <div>
                        <strong>@comment.Title</strong><br />
                        <em>@comment.AuthorFullName</em><br />
                        @comment.Publisher
                    </div>
                </td>
                <td>@comment.Text</td>
                <td>
                    <img src="/users/@comment.UserImageUrl" alt="User Image" style="width: 100px; height: auto;" />
                    <div>
                        @comment.UserName
                    </div>
                    <div>
                        (@comment.FullName)
                    </div>
                    <div>
                        <a href="mailto:@comment.Email">@comment.Email</a>
                    </div>
                </td>
                <td>@comment.DateTime.ToString("g")</td>

                <td>
                    <form asp-action="DeleteComment" method="post" onsubmit="return confirm('Are you sure you want to delete this comment?');" class="delete-comment-form">
                        <input type="hidden" name="commentId" value="@comment.CommentId" />
                        <button type="submit" class="btn btn-outline-danger btn-sm delete-button"><i class="bi bi-trash"></i> Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

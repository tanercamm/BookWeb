@model AuthorCreateViewModel

<h2>Create Author</h2>

<form asp-action="AuthorCreate">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Biography" class="control-label"></label>
        <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>

    <!-- Buraya yazarın kitapları için gerekli input alanları eklenebilir (isteğe bağlı) -->

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

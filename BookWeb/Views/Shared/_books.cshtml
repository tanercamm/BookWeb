@model BookWeb.Entity.Book

<div class="card text-center mb-3" style="width: 13rem; height: 31rem;">
	<img src="/book/@Model.ImageUrl" alt="@Model.Title" />
	<div class="card-body">
		<h5 class="card-title">@Model.Title</h5>
		<div>
			<a class="btn btn-primary" asp-controller="Books" asp-action="Details"
			   asp-route-id="@Model.BookId">Details</a>
		</div>
	</div>
</div>